<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#000000" />

            <corners android:topRightRadius="200dp"
                android:topLeftRadius="200dp"
                android:bottomLeftRadius="200dp"
                android:bottomRightRadius="200dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="1dp"
                android:top="0dp" />

            <solid android:color="#06c7c7c7" />

            <corners android:topRightRadius="200dp"
                android:topLeftRadius="200dp"
                android:bottomLeftRadius="200dp"
                android:bottomRightRadius="200dp"/>
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#240a43" />
            <size android:width="300dp"
                android:height="300dp"/>
            <corners android:topRightRadius="200dp"
                android:topLeftRadius="200dp"
                android:bottomLeftRadius="200dp"
                android:bottomRightRadius="200dp"/>
        </shape>
    </item>

</layer-list>