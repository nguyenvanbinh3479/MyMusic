<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quoctuan.mymusic.Main2Activity">
    <android.support.v7.widget.Toolbar
        android:background="#0090ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imgMenu"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/imgMenu"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="Library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.SearchView
                android:id="@+id/searchView"
                android:layout_toLeftOf="@+id/moreImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.SearchView>
            <ImageButton
                android:id="@+id/moreImg"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:padding="10dp"
        android:background="#0090ff"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/idsongs"
            android:layout_alignParentRight="true"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text="SONGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rtlOne"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/idsongs"
            android:background="#fff"
            android:layout_width="100dp"
            android:layout_height="2dp">
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/idsongs2"
            android:layout_toLeftOf="@+id/idsongs"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text="ALBUMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rtlOne2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/idsongs2"
            android:layout_toLeftOf="@+id/rtlOne"
            android:background="#fff"
            android:layout_width="120dp"
            android:layout_height="2dp">
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/idsongs3"
            android:layout_toLeftOf="@+id/idsongs2"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text="FAFORITE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/idsongs3"
            android:layout_toLeftOf="@+id/rtlOne2"
            android:background="#fff"
            android:layout_width="140dp"
            android:layout_height="2dp">
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
